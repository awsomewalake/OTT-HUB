<% layout('/layouts/boilerplate') %>

    <% if (search.length> 0) { %>
        <div class="row homecategory">
            <div class="card">
                <h2 class="heading">MOVIES</h2>
            </div>
            <% for (let i= 0; i <search.length; i++) { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3><%= search[i].title %></h3>
                            </div>
                            <div class="card-body">
                                <h2><%= search[i].rating %></h2>
                                    <p><%= search[i].year %></p>
                                        <p><%= search[i].collection %></p>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                </div>